<UserControl x:Class="MadininApp.User_Control.Tuile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:objects="clr-namespace:MadininApp.Objects" d:DataContext="{d:DesignInstance Type=objects:MadinArticle}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">


    <Border  Padding="1" Background="Black" BorderThickness="1" CornerRadius="10">
        <Expander Margin="0" Background="WhiteSmoke">
            <!-- Header : partie de la tuile toujours visible-->
            <Expander.Header>
                <Grid x:Name="tileGrid">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="116" />
                        <RowDefinition Height="84"/>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Vertical" Grid.RowSpan="2">
                        <TextBlock Text="{Binding Category}" FontSize="10" FontStyle="Italic" HorizontalAlignment="Left"/>
                        <TextBlock Text="{Binding Date}" FontSize="10" HorizontalAlignment="Right"/>
                        <TextBlock Text="{Binding Author}" TextWrapping="Wrap" FontSize="12" Foreground="Red" HorizontalAlignment="Center" MaxHeight="15px"/>
                        <TextBlock Text="{Binding Title}" TextWrapping="Wrap" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" TextAlignment="Center" MaxHeight="45px"/>
                        <Image Source="{Binding ImageUrl}" Height="100" Stretch="Uniform"/>
                    </StackPanel>


                    <Grid Grid.Row ="2" Grid.RowSpan="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                            <ColumnDefinition Width="1*" />
                        </Grid.ColumnDefinitions>
                        <CheckBox Grid.Column="1"  IsChecked="{Binding IsChecked, Mode=TwoWay}" VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="4">
                            <CheckBox.Template>
                                <ControlTemplate TargetType="CheckBox">
                                    <StackPanel Orientation="Horizontal">
                                        <Border x:Name="border" CornerRadius="4" Width="22" Height="22" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1">
                                            <TextBlock x:Name="CheckMarkSymbol" Text="✔" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Visibility="Collapsed"/>
                                        </Border>
                                        <ContentPresenter Content="{TemplateBinding Content}" Margin="5,0,0,0" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter TargetName="CheckMarkSymbol" Property="Visibility" Value="Visible"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="border" Property="Background" Value="LightSkyBlue"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </CheckBox.Template>
                        </CheckBox>
                        <!-- RadioButton pour sélectionner l'article à la une -->
                        <RadioButton  Grid.Column="0"  GroupName="ArticleALaUne"
                             Content="Top"
                             IsChecked="{Binding IsTopArticle, Mode=TwoWay}"/>
                    </Grid>
                </Grid>
            </Expander.Header>
            <!-- Contenu article visible à expansion de la tuile  -->
            <TextBlock Text="{Binding Content}" TextWrapping="Wrap" FontSize="12" HorizontalAlignment="Center" TextAlignment="Center"/>
        </Expander>
    </Border>
</UserControl>
